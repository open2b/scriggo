// TODO (Gianluca): functions in Scrigo should be declared with "func ...",
// so a convertion is necessary when executing with Go interpreter.

zeroval := func(ival int) {
    ival = 0
}

zeroptr := func(iptr *int) {
    *iptr = 0
}

i := 1
println("initial:", i)

zeroval(i)
println("zeroval:", i)

zeroptr(&i)
println("zeroptr:", i)

println("pointer:", &i)
